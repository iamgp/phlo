[sqruff]
# SQL dialect for dbt projects
dialect = postgres
# Run all rules except those explicitly excluded
rules = all

# Layout and indentation
[sqruff:indentation]
indent_unit = space
tab_space_size = 4

# Capitalization - match existing lowercase style
[sqruff:capitalisation.keywords]
capitalisation_policy = lower

[sqruff:capitalisation.identifiers]
capitalisation_policy = lower

[sqruff:capitalisation.functions]
capitalisation_policy = lower

[sqruff:capitalisation.types]
capitalisation_policy = lower

[sqruff:capitalisation.literals]
capitalisation_policy = lower

# Aliasing
[sqruff:aliasing.table]
aliasing = explicit

[sqruff:aliasing.column]
aliasing = explicit

# Convention
[sqruff:convention.select_trailing_comma]
select_clause_trailing_comma = forbid

# Line length
[sqruff:layout.long_lines]
max_line_length = 100
