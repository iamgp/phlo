{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://phlo.dev/schemas/service.schema.json",
  "title": "Phlo Service Definition",
  "description": "Schema for service.yaml files that define Phlo infrastructure services",
  "type": "object",
  "required": ["name", "description"],
  "additionalProperties": false,
  "properties": {
    "name": {
      "type": "string",
      "description": "Unique service identifier",
      "pattern": "^[a-z][a-z0-9-]*$"
    },
    "description": {
      "type": "string",
      "description": "Human-readable service description"
    },
    "version": {
      "type": "string",
      "description": "Service version",
      "default": "latest"
    },
    "category": {
      "type": "string",
      "enum": ["core", "orchestration", "api", "bi", "observability", "admin"],
      "description": "Service category for organization"
    },
    "default": {
      "type": "boolean",
      "description": "Whether to install by default",
      "default": false
    },
    "profile": {
      "type": ["string", "null"],
      "description": "Docker compose profile name, or null for always-included"
    },
    "depends_on": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "List of service names this service depends on"
    },
    "image": {
      "type": "string",
      "description": "Docker image reference (mutually exclusive with build)"
    },
    "build": {
      "type": "object",
      "description": "Build configuration (mutually exclusive with image)",
      "properties": {
        "context": {
          "type": "string",
          "default": "."
        },
        "dockerfile": {
          "type": "string",
          "default": "Dockerfile"
        },
        "args": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        }
      }
    },
    "compose": {
      "type": "object",
      "description": "Docker Compose service configuration",
      "properties": {
        "container_name": {
          "type": "string"
        },
        "restart": {
          "type": "string",
          "default": "unless-stopped"
        },
        "environment": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        },
        "ports": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "volumes": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "command": {
          "oneOf": [
            {"type": "string"},
            {"type": "array", "items": {"type": "string"}}
          ]
        },
        "healthcheck": {
          "type": "object",
          "properties": {
            "test": {
              "type": "array",
              "items": {"type": "string"}
            },
            "interval": {"type": "string"},
            "timeout": {"type": "string"},
            "retries": {"type": "integer"},
            "start_period": {"type": "string"}
          }
        }
      }
    },
    "env_vars": {
      "type": "object",
      "description": "Environment variables to add to .env",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "default": {
            "oneOf": [
              {"type": "string"},
              {"type": "integer"}
            ]
          },
          "description": {"type": "string"},
          "secret": {
            "type": "boolean",
            "default": false
          }
        },
        "required": ["default"]
      }
    },
    "files": {
      "type": "array",
      "description": "Additional files to copy during init",
      "items": {
        "type": "object",
        "required": ["source", "dest"],
        "properties": {
          "source": {"type": "string"},
          "dest": {"type": "string"}
        }
      }
    },
    "hooks": {
      "type": "object",
      "description": "Lifecycle hooks",
      "properties": {
        "post_init": {"type": "string"},
        "post_start": {"type": "string"}
      }
    }
  },
  "oneOf": [
    {"required": ["image"]},
    {"required": ["build"]},
    {
      "not": {
        "anyOf": [
          {"required": ["image"]},
          {"required": ["build"]}
        ]
      }
    }
  ]
}
